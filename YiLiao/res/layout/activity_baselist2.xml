<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.bolaa.medical.view.pulltorefresh.PullListView
        android:id="@+id/baseList2_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="@null" />

    <LinearLayout
        android:id="@+id/baseList2_noDataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/baseList2_noIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/none_collect" />

        <TextView
            android:id="@+id/baseList2_noTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="您还还未收藏任何商品哦~~"
            android:textColor="@color/text_grey_french2"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/baseList2_noTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/all_margin"
            android:text="赶紧去收藏吧！"
            android:textColor="@color/text_grey_french2"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>