<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        >

        <TextView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/back"
            android:gravity="center"
            android:paddingLeft="@dimen/all_margin"
            android:paddingRight="35dp" />

        <TextView
            android:id="@+id/title_middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="支付结果"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big_big_big" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pay_success"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_status"
        android:layout_marginBottom="15dp"
        />


    <TextView
        android:id="@+id/tv_status_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="——恭喜你支付成功——"
        android:gravity="center"
        android:layout_below="@+id/tv_status"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/text_size_big" />


    <TextView
        android:id="@+id/tv_go_to_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:text="返回预约记录"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_big" />


</RelativeLayout>