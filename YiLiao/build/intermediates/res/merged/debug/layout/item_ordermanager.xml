<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_ordermanager_ivIv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_ordermanager_titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="芬迪15年新款男士尼龙灯泡双肩包黑色时尚黑包"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/all_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_ordermanager_priceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥168.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_ordermanager_numTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="X2"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_ordermanager_managerLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/all_margin"
        android:layout_marginRight="@dimen/all_margin"
        android:layout_marginTop="@dimen/all_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_ordermanager_priceAllTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="实付款：659.10"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_ordermanager_right1Tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_stroke_grey"
            android:gravity="center"
            android:text="订单评论"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_ordermanager_right2Tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_stroke_yellow"
            android:gravity="center"
            android:text="再次购买1"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_ordermanager_refoundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_margin"
        android:layout_marginLeft="@dimen/all_margin"
        android:layout_marginRight="@dimen/all_margin"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_ordermanager_tradeMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_toLeftOf="@+id/item_ordermanager_refoundMoneyTv"
            android:text="交易金额 892"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_ordermanager_refoundMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/all_margin"
            android:text="退款金额 892"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_ordermanager_jiesuanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_margin"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_marginRight="@dimen/all_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="配送方式"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_ordermanager_wayMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="快递 23.00"
                android:textColor="@color/text_grey_french1"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginBottom="@dimen/all_margin"
            android:layout_marginTop="@dimen/all_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_marginRight="@dimen/all_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买家留言："
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/item_ordermanager_liuyanEdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_margin"
                android:layout_weight="1"
                android:background="@null"
                android:hint="选填，给商家留言（45字以内）"
                android:maxLength="45"
                android:minHeight="@dimen/text_height"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginBottom="@dimen/all_margin" />

        <TextView
            android:id="@+id/item_ordermanager_numAndpriceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/all_margin"
            android:gravity="center_vertical|right"
            android:text="共计两件商品，合计889.00"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

</LinearLayout>