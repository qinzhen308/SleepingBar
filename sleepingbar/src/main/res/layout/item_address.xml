<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_address_selectIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/all_margin"
            android:src="@drawable/check" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/all_margin"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/item_address_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张某某"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/item_address_phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/item_address_nameTv"
                android:text="145656329669"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/item_address_defaultTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_address_nameTv"
                android:layout_marginTop="@dimen/all_margin"
                android:background="@drawable/bg_rectangle_yellow_coner"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/item_address_addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_address_nameTv"
                android:layout_marginTop="@dimen/all_margin"
                android:layout_toRightOf="@+id/item_address_defaultTv"
                android:text="重庆市渝北区嘉州路黄花园4号"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <View
            style="@style/divider_vertical_gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/item_address_editIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/edit3" />
    </LinearLayout>

    <View
        android:id="@+id/item_address_line"
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/all_margin"
        android:layout_marginRight="@dimen/all_margin" />

</LinearLayout>