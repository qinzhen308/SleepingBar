<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/all_margin"
    android:paddingRight="@dimen/all_margin" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <View
            style="@style/divider_vertical_gray"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/item_logistics_selectIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/selected_yellow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/all_margin"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_logistics_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin"
            android:text="2013-3-2 12:30:33"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_logistics_contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin"
            android:text="货物正在移交到司令部"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size" />

        <View
            android:id="@+id/item_logistics_line"
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/all_margin" />
    </LinearLayout>

</LinearLayout>