<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="horizontal" >



    <com.bolaa.sleepingbar.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/user2"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="用户昵称"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/iv_avatar"
        android:textColor="@color/text_grey"
        android:gravity="center_vertical|left"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="第32名"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_grey_french1"
        android:gravity="center_vertical|left"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/tv_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_support_gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:minEms="2"
        android:text="123"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/main"
        android:maxEms="4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />


    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_support"
        android:src="@drawable/ic_heart_purple"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_funds_total"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="121322"
        android:ems="5"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/checkbox"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textColor="@color/main"
        android:layout_centerVertical="true"
        android:gravity="center"
        />

    

</RelativeLayout>
