<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_balance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="充值金额"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/text_grey_french1"
            />

        <EditText
            android:id="@+id/et_balance"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:textColorHint="@color/text_grey_french2"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/text_yellow"
            />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="元"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/text_yellow"
            />


    </LinearLayout>




    <View
        style="@style/divider_horizontal_grey2"/>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="充值方式"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/text_grey_french1"
            />

        <ListView
            android:id="@+id/lv_pay_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@null"
            />

    </LinearLayout>
    


    <TextView
            android:id="@+id/btn_pay"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/text_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:background="@drawable/btn_purple"
            android:gravity="center"
            android:text="提 交"
            android:textColor="@color/btn_white_purple"
            android:textSize="@dimen/text_size_big_big" />
    

</LinearLayout>
