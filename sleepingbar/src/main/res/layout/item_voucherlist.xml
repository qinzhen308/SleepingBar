<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="@dimen/all_margin" >

    <RelativeLayout
        android:id="@+id/item_voucherlist_bglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viptickt" >

        <TextView
            android:id="@+id/item_voucherlist_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_marginTop="@dimen/all_margin"
            android:text="美食券|海悦汇抵用券"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_voucherlist_nameTv"
            android:layout_marginLeft="@dimen/all_margin"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_voucherlist_money1Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="¥"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/item_voucherlist_moneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_voucherlist_money1Tv"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/item_voucherlist_ruleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/item_voucherlist_moneyTv"
                    android:text="[满188元可用]"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_voucherlist_timeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/all_margin"
                android:gravity="center_vertical"
                android:text="15/12/07  8:00:00—5/12/09  8:00:00"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/item_voucherlist_selectBox"
        style="@style/CustomCheckboxTheme_yellow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="使用此张抵用券"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size"
        android:visibility="gone" />

</LinearLayout>