<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1"
        android:ems="2"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/text_grey"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <com.bolaa.sleepingbar.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/user2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_ranking"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="用户昵称"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:textColor="@color/text_grey"
        android:gravity="center_vertical|left"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/iv_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_support_gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_support_count"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1"
        android:ems="2"
        android:layout_alignLeft="@+id/iv_support"
        android:layout_alignRight="@+id/iv_support"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="-8dp"
        android:textSize="@dimen/text_size_big"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_grey_french1"
        android:gravity="center"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_support"
        android:button="@drawable/selector_checkbox_heart"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_funds_total"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="121322"
        android:ems="3"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/checkbox"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textColor="@color/main"
        android:layout_centerVertical="true"
        android:gravity="center"
        />

    

</RelativeLayout>
