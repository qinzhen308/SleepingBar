<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent" >




    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pay_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/tv_status"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_big_big_big" />




    <TextView
        android:id="@+id/tv_status_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="转账请求已经成功发送给银行"
        android:gravity="center"
        android:layout_below="@+id/tv_status"
        android:textColor="@color/text_grey"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/tv_status_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="具体到账时间视银行处理时间"
        android:gravity="center"
        android:layout_below="@+id/tv_status"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_big" />


    <TextView
        android:id="@+id/tv_go_to_appointment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:text="知道了"
        android:gravity="center"
        android:textColor="@color/main"
        android:background="@drawable/bg_rectangle_strake_purple"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_big" />


</LinearLayout>