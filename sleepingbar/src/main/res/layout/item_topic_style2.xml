<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_content"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="内容按时发货付款圣诞快乐福建省的刻录机考老师的卡洛斯的附件考虑"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:layout_below="@+id/layout_model1"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_grey"
        />

    <TextView
        android:id="@+id/tv_all"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="全文"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="5dp"
        android:textColor="@color/main"
        />

    <com.bolaa.sleepingbar.view.GridViewInScrollView
        android:id="@+id/gv_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_below="@+id/tv_all"
        android:layout_marginTop="5dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        />

    <LinearLayout
        android:id="@+id/layout_model1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/tv_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3月6日 12-12"
            android:singleLine="true"
            android:layout_alignBottom="@+id/iv_menu"
            android:layout_toLeftOf="@+id/iv_menu"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_grey_french1"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_praise_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="赞：0"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_grey_french1"
            />

        <TextView
            android:id="@+id/tv_comments_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="留言：0"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_grey_french1"
            />



        <!--<ImageView-->
            <!--android:id="@+id/iv_praise"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_heart_purple2"-->
            <!--android:padding="3dp"-->
            <!--/>-->


    </LinearLayout>


</RelativeLayout>
