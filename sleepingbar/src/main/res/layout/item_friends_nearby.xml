<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >


    <com.bolaa.sleepingbar.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/user2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_ranking"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="用户昵称"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:textColor="@color/text_grey"
        android:gravity="center_vertical|left"
        android:layout_marginTop="10dp"
        />





    <TextView
        android:id="@+id/tv_distance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="562m"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_care"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/text_grey_french1"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_care"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:text="关注"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/checkbox"
        android:textSize="@dimen/text_size_big"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/bg_rectangle_strake_half_circel_purple"
        android:layout_alignParentRight="true"
        android:textColor="@color/main"
        android:layout_centerInParent="true"
        android:gravity="center"
        />

    

</RelativeLayout>
