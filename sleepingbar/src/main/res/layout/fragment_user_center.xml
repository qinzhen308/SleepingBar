<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:orientation="vertical" >

        <com.bolaa.sleepingbar.view.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_avatar_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="睡虫"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:layout_marginTop="18dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_bind_watch"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="去绑定手环"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_big"
            android:layout_marginTop="3dp"
            android:gravity="center"
            />

        <View
            style="@style/divider_horizontal_grey"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/layout_medal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="我的勋章"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_my_medal"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>


        <TextView
            android:id="@+id/layout_my_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="我的好友"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_my_friends"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:background="#F5F5F8"/>

        <RelativeLayout
            android:id="@+id/layout_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:drawableRight="@drawable/arr_big"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_big"
                android:text="我的消息"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_my_msg"
                />

            <TextView
                android:id="@+id/tv_msg_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_solid_red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>


        <TextView
            android:id="@+id/layout_my_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="我的账户"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_account"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:background="#F5F5F8"/>

        <TextView
            android:id="@+id/layout_device_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="设备信息"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_device_info"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>


        <TextView
            android:id="@+id/layout_private_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="隐私设置"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_private_settings"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:background="#F5F5F8"/>

        <TextView
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:drawableRight="@drawable/arr_big"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_big"
            android:text="关于睡吧"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_about"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F5F5F8"/>



    </LinearLayout>

</ScrollView>
