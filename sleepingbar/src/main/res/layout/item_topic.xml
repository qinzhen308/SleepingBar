<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >


    <com.bolaa.sleepingbar.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/user2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_ranking"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="用户昵称"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/iv_avatar"
        android:textColor="@color/text_grey"
        android:gravity="center_vertical|left"
        android:layout_marginTop="5dp"
        />




    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_menu_purple"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="3月6日 12-12"
        android:singleLine="true"
        android:layout_alignBottom="@+id/iv_menu"
        android:layout_toLeftOf="@+id/iv_menu"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text_grey_french1"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="内容按时发货付款圣诞快乐福建省的刻录机考老师的卡洛斯的附件考虑"
        android:layout_toLeftOf="@+id/tv_funds_total"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_grey"
        android:layout_marginTop="5dp"
        />

    <com.bolaa.sleepingbar.view.GridViewInScrollView
        android:id="@+id/gv_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="5dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        />

    <LinearLayout
        android:layout_below="@+id/gv_pics"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/tv_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_praise_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:text="点赞：0"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_grey_french1"
            />

        <TextView
            android:id="@+id/tv_comments_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:text="留言：0"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_grey_french1"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_purple2"
            android:padding="3dp"
            />


    </LinearLayout>


</RelativeLayout>
