<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bolaa.sleepingbar.view.CircleImageView
        android:id="@+id/myInfo_iconIv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/user2"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/myInfo_nameLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/text_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="姓名："
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
             <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:text=""
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
             <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:background="@null"
            android:visibility="gone"
            android:text="张某某"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
            
            
        </RelativeLayout>

       
    </LinearLayout>

    <View style="@style/divider_horizontal" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"/>

    <LinearLayout
        android:id="@+id/myInfo_realNameLayout"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/text_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="性别："
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/all_margin"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:enabled="false"
            android:text="保密"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>

    <View style="@style/divider_horizontal" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"/>

    <LinearLayout
        android:id="@+id/myInfo_borthLayout"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/text_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="出身年月日："
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/all_margin"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:enabled="false"
            android:text="1990-01-01"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>

    <View style="@style/divider_horizontal" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"/>

    <LinearLayout
        android:id="@+id/myInfo_sexLayout"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/text_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="血型选择："
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_blood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/all_margin"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:enabled="false"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>

    <View style="@style/divider_horizontal" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"/>

    <LinearLayout
        android:id="@+id/myInfo_placeLayout"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="@dimen/text_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="身份证号码："
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
             <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
             <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            android:background="@null"
            android:visibility="gone"
            android:text="1234567890987654321"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size_big" />
            
            
        </RelativeLayout>

    </LinearLayout>
    
    <View style="@style/divider_horizontal" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"/>

</LinearLayout>